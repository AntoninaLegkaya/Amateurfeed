<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/layout_item_search"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:columnCount="3">

  <ImageButton
    android:id="@+id/email_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_email_black_24dp"
    android:elevation="4dp"
    app:layout_gravity="center" />

  <EditText
    android:id="@+id/profile_user_email"
    android:layout_width="195dp"
    android:textColor="@color/app_blue_text"
    android:textSize="14dp"
    app:layout_columnWeight="1"
    app:layout_gravity="fill_horizontal|center"
    android:text="@string/user_email" />

  <ImageButton
    android:id="@+id/clear_email_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_delete_image_button"
    android:clickable="true"
    app:layout_columnWeight="1"
    app:layout_gravity="center"
    />

</android.support.v7.widget.GridLayout>