<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/layout_item_search"
  style="@style/AppTheme.Widget.InputPasswordParamField"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/activity_link_margin"
  app:columnCount="3">
  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/abc_list_item_padding_horizontal_material"
    android:background="@drawable/ic_lock_black_24dp"
    android:clickable="true"
    app:layout_gravity="center_vertical" />
  <android.support.design.widget.TextInputLayout
    android:id="@+id/newInputLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_columnWeight="1"
    app:layout_gravity="fill_horizontal">

    <android.support.v7.widget.AppCompatEditText
      android:id="@+id/input_item_new_password"
      style="@style/Widget.Design.DetailTextInputLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:paddingTop="2dp"
      android:ems="1"
      android:gravity="fill_horizontal"
      android:hint="@string/hint_new_password"
      android:inputType="textMultiLine"
      android:textColor="@color/app_black" />
  </android.support.design.widget.TextInputLayout>

</android.support.v7.widget.GridLayout>