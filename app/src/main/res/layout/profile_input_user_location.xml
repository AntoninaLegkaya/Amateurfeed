<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/layout_item_location"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:columnCount="3">
  <ImageButton
    android:id="@+id/image_place"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_room_black_24dp"
    android:clickable="true"
    app:layout_gravity="center" />
  <TextView
    android:id="@+id/profile_user_location"
    android:layout_width="@dimen/layout_width_195dp"
    android:paddingLeft="@dimen/padding_2dp"
    android:text="@string/edit_profile_location"
    android:textColor="@color/app_blue_text"
    android:textSize="@dimen/text_size_14sp"
    app:layout_columnSpan="2"
    app:layout_columnWeight="1"
    app:layout_gravity="fill_horizontal|center" />
</android.support.v7.widget.GridLayout>