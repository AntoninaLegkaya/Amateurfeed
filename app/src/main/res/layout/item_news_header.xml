<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/layout_item_header"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:columnCount="2">


  <ImageView
    android:id="@+id/image_author_icon"
    android:layout_width="120dp"
    android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
    android:adjustViewBounds="true"
    android:maxHeight="@dimen/profile_icon"
    android:maxWidth="@dimen/profile_icon"
    app:layout_columnWeight="1"
    app:layout_gravity="left"
    app:layout_rowSpan="2"
    tools:src="@mipmap/splash" />

  <TextView
    android:id="@+id/text_author_name"
    android:layout_width="0dp"
    android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
    android:fontFamily="sans-serif"
    android:gravity="left"
    android:textAppearance="@style/TextAppearance.AppCompat.Title"
    android:textColor="@color/app_black"
    app:layout_columnWeight="1"
    app:layout_gravity="fill_horizontal"
    tools:text="Name User" />

  <TextView
    android:id="@+id/text_item_date"
    android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
    android:fontFamily="sans-serif"
    android:gravity="center_horizontal"
    android:textAppearance="@style/TextAppearance.AppCompat.Title"
    android:textColor="@color/secondary_text"
    android:textSize="16sp"
    app:layout_columnWeight="1"
    app:layout_gravity="left"
    tools:text="Today, April 03" />


  <TextView

    android:id="@+id/text_edit_title_news"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
    android:padding="@dimen/abc_list_item_padding_horizontal_material"
    android:textColor="@color/app_blue_text"
    app:layout_columnSpan="2"
    app:layout_columnWeight="1"
    app:layout_gravity="fill_horizontal"
    app:layout_rowSpan="2"
    tools:text="This is First Text "></TextView>

  <ImageView
    android:id="@+id/image_news_photo"
    android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
    android:adjustViewBounds="true"
    android:maxHeight="@dimen/preview_icon"
    android:maxWidth="@dimen/preview_icon"
    app:layout_columnSpan="2"
    app:layout_columnWeight="1"
    app:layout_gravity="center"
    app:layout_rowSpan="2"
    tools:src="@mipmap/splash" />

  <android.support.v7.widget.RecyclerView
    android:id="@+id/view_tags_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif"
    app:layout_columnSpan="2"
    app:layout_columnWeight="1"
    app:layout_rowSpan="2" />


</android.support.v7.widget.GridLayout>