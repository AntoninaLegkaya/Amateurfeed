    <TextView

        android:id="@+id/list_item_description"
        style="@style/AppTheme.Widget.InputCommentField"
        android:layout_width="wrap_content"
        android:padding="@dimen/abc_list_item_padding_horizontal_material"
        android:text="This is description"
        android:textColor="@color/app_black"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_rowSpan="3"
        tools:text="This is description"
        />


    <LinearLayout
        android:paddingLeft="@dimen/abc_list_item_padding_horizontal_material"
        android:paddingTop="1dp"
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        app:layout_rowSpan="2">

        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/abc_list_item_padding_horizontal_material"
            android:background="@drawable/ic_favorite_border_white_24dp"
            android:elevation="4dp"
            />

        <TextView
            android:id="@+id/list_item_likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/secondary_text"
            tools:text="0"/>


    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/abc_list_item_padding_horizontal_material"
        app:layout_columnWeight="1"
        app:layout_gravity="center_vertical"
        app:layout_rowSpan="2">

        <TextView
            android:id="@+id/list_item_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/abc_list_item_padding_horizontal_material"
            android:textColor="@drawable/tab_text_link"

            tools:text="0"/>

        <TextView
            android:id="@+id/item_comment_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contextClickable="true"
            android:text="@string/item_comment_label"
            android:textColor="@drawable/tab_text_link"
            />

    </LinearLayout>


    <LinearLayout
        android:paddingRight="@dimen/abc_list_item_padding_horizontal_material"
        app:layout_columnWeight="1"
        app:layout_gravity="right"
        app:layout_rowSpan="2"
        >


        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/abc_list_item_padding_horizontal_material"
            android:background="@drawable/ic_edit_black_24dp"
            android:elevation="8dp"
            />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_delete_black_24dp"
            android:elevation="8dp"
            />


    </LinearLayout>


</android.support.v7.widget.GridLayout>