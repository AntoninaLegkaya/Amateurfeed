<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    </style>

    <!--main activity toolbar style-->

    <style name="Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!--Button-->
    <style name="Toolbar.Button" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>


    <!-- Custom Preference Theme inherits from the v14 support library Material Theme -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceFixTheme">
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFixTheme</item>
    </style>



    <!-- Style for a custom Preference Entry -->
    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>


    <!--Splash Screen Theme-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--Main Screen Theme-->
    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!--Setting Screen Theme-->
    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <!--Style for  Login Screen TextInputLayout-->

    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--Style for Login Screen  Button-->

    <style name="ButtonAppTheme" parent="Widget.AppCompat.Button.Colored">фт
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>

    </style>
    <!--Style for warning dialog-->
    <style name="WarningDialogMessageTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/warning_dialog_message_text</item>
        <item name="android:textSize">@dimen/warning_dialog_message_text_size</item>
    </style>

    <style name="WarningDialogButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/warning_dialog_button_text</item>
        <item name="android:textSize">@dimen/warning_dialog_button_text_size</item>
    </style>

    <style name="TabHome" parent="AppTheme.Main">
        <item name="android:textColor">@color/hint_text</item>
        <item name="android:textSize">@dimen/tab_item_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>
